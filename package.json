{
  "name": "@better-giving/react-emails",
  "version": "1.1.0",
  "description": "React Email templates for Better Giving",
  "packageManager": "pnpm@10.26.0",
  "engines": {
    "node": "24.x"
  },
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/AngelProtocolFinance/emails"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "email dev --dir emails --port 3001",
    "build": "tsup",
    "build:preview": "email build --dir emails -p pnpm",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint src",
    "format": "biome format --write src",
    "check": "biome check --write src",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "changeset publish"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "@react-email/components": "1.0.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.9",
    "@changesets/changelog-github": "0.5.2",
    "@changesets/cli": "2.29.8",
    "@react-email/preview-server": "5.0.8",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "next": "16.0.10",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-email": "5.0.8",
    "tsup": "8.5.1",
    "typescript": "5.9.3"
  }
}
