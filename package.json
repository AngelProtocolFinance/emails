{
  "name": "@better-giving/react-emails",
  "version": "1.0.0",
  "description": "React Email templates for Better Giving",
  "packageManager": "pnpm@9.15.1",
  "engines": {
    "node": "22.x"
  },
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "email dev --dir emails --port 3001",
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint src",
    "format": "biome format --write src",
    "check": "biome check --write src",
    "prepublishOnly": "pnpm run build"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "@react-email/components": "^0.0.31"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.0",
    "@types/react": "^18.3.0",
    "react": "^18.3.1",
    "react-email": "^3.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.6.0"
  }
}
