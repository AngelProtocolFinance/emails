{
  "name": "@better-giving/react-emails",
  "version": "1.0.0",
  "description": "React Email templates for Better Giving",
  "packageManager": "pnpm@10.26.0",
  "engines": {
    "node": "22.x"
  },
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "email dev --dir emails --port 3001",
    "build": "tsup",
    "build:preview": "email build --dir emails -p pnpm",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint src",
    "format": "biome format --write src",
    "check": "biome check --write src",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "changeset publish"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "@react-email/components": "^0.0.31"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.0",
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@react-email/preview-server": "^5.0.8",
    "@types/react": "^19.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-email": "^5.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.6.0"
  }
}
